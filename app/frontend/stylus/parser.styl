html 
    width: 100%
    height: 100%
    
    background-color: #fafafa
    
    body 
        height: 100%
        padding: 0 !important

        background-color: #fff
        box-shadow: 0 0 0.25vw rgba(0, 0, 0, 0.2)
        
        overflow: hidden
        
        header
            position: relative

            height: 25%
            
            background-image: url('img/header.png')
            background-repeat: no-repeat
            background-size: cover
            
            h1
                position: absolute
                top: 50%
                left: 50%
                transform: translate(-50%, -50%)
                
                color: white
                font-size: 5.5vh
            
        section 
            height: 70%
            
        @import 'view_inputs.styl'
        @import 'view_progress.styl'